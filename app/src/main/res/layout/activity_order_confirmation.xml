<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/receipt"
    android:scrollbars="vertical">

    <!-- Order Confirmation Message -->
    <TextView
        android:id="@+id/orderConfirmationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your order!"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Order Details Section -->
    <TextView
        android:id="@+id/orderDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order details will appear here"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Total Price -->
    <TextView
        android:id="@+id/totalPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: PHP 0.00"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Payment Method -->
    <TextView
        android:id="@+id/paymentMethodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method: Cash on Delivery"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Parcel Tracking Progress Line -->
    <TextView
        android:id="@+id/trackingStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracking Status:"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <!-- Horizontal ProgressBar -->
    <ProgressBar
        android:id="@+id/parcelProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
    android:indeterminate="false"
    android:max="100"
    android:layout_marginBottom="20dp" />

    <!-- Parcel Tracking Steps -->
    <TextView
        android:id="@+id/parcelStatusStep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Order Placed"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/parcelStatusStep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Shipped"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/parcelStatusStep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. In Transit"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/parcelStatusStep4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Delivered"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="40dp"/>

    <!-- Go to Home Button -->
    <Button
        android:id="@+id/goToHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Home"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

</LinearLayout>
