<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@drawable/gradient">

    <!-- Top Section with Back Home Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:gravity="start">

        <!-- Back Home Image Button -->
    </LinearLayout>

    <!-- User Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_account"
            android:layout_marginBottom="16dp" />

        <!-- User Name -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- User Email -->
        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="johndoe@example.com"
            android:textSize="16sp"
            android:textColor="#E60909"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Dashboard Buttons Section -->
    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/orderHistoryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order History"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient"
        android:textColor="#FFFFFF" />

    <!-- New Button for Add Product -->
    <Button
        android:id="@+id/addProductButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient"
        android:textColor="#FFFFFF" />

    <!-- New Button for Logging in Another Account -->
    <Button
        android:id="@+id/logInAnotherDeviceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In Another Account"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient"
        android:textColor="#FFFFFF" />

    <!-- Log Out Button -->
    <Button
        android:id="@+id/logOutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:background="@drawable/gradient"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/backHomeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Back Home"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_back" />

</LinearLayout>
